// Test cases for borrowing and references

// --- Valid cases ---

// 1. Immutable borrow
let a: i32 = 10;
let b: &i32 = &a;

// 2. Mutable borrow
let mut c: i32 = 20;
let d: &mut i32 = &mut c;

// 3. Multiple immutable borrows
let e: i32 = 30;
let f: &i32 = &e;
let g: &i32 = &e;

// --- Invalid cases ---

// 4. Mutable borrow while immutably borrowed
let h: i32 = 40;
let i: &i32 = &h;
let j: &mut i32 = &mut h;

// 5. Immutable borrow while mutably borrowed
let mut k: i32 = 50;
let l: &mut i32 = &mut k;
let m: &i32 = &k;

// 6. Move while borrowed
let n: string = "hello";
let o: &string = &n;
let p: string = n;

// 7. Mutate while borrowed
let mut q: i32 = 60;
let r: &i32 = &q;
q = 70;
